<%= render 'shared/navbar' %>
<%= render 'shared/header' %>
<div class="container">
  <div class="row">
    <div class="col-md-5 link-card">
      <h2>Blogs</h2>
      <% @blogs.first(10).each do |blog| %>
        <div class="blog-link"><%= link_to "#{blog.name}", blog.url, target: :_blank %></div>
        <div class="published blog-link"><%= verbose_date(blog.published_at) %> | <%= blog.author %>
          <span class="blog-summary" data-toggle="popover" data-placement="right" title="Preview" data-content="<%= strip_tags(blog.summary) %>">| Preview</span>
          <div class="image"><%= blog.image %></div>
        </div>
          <br>
      <% end %>
        <button type="button", id="show-more-blog">Show More</button>
    </div>

    <div class="col-md-5 link-card">
      <h2>Podcasts</h2>
      <% @podcasts.first(10).each do |podcast| %>
        <div class="podcast-link"><%= link_to "#{podcast.name}", podcast.url, target: :_blank %></div>
        <div class="published podcast-link"><%= verbose_date(podcast.published_at) %> | <%= podcast.author %>
          <span class="podcast-summary" data-toggle="popover" data-placement="left" title="Preview" data-content="<%= strip_tags(podcast.summary.truncate(350)) %>">| Preview</span>
        </div>
          <br>
      <% end %>
      <button type="button", id="show-more-podcast">Show More</button>
  </div>
    <div class="col-md-5 link-card">
      <h2>Quant</h2>
      <% @quants.first(10).each do |quant| %>
        <div class="quant-link"><%= link_to "#{quant.name}", quant.url, target: :_blank %></div>
        <div class="published quant-link"><%= verbose_date(quant.published_at) %> | <%= quant.author %>
          <span class="quant-summary" data-toggle="popover" data-placement="right" title="Preview" data-content="<%= strip_tags(quant.summary) %>">| Preview</span>
        </div>
          <br>
      <% end %>
      <button type="button", id="show-more-quant">Show More</button>
  </div>

  <div class="col-md-5 link-card">
    <h2>Papers</h2>
    <% @papers.first(10).each do |paper| %>
      <div class="paper-link"><%= link_to "#{paper.name}", paper.url, target: :_blank %></div>
      <% if paper.published_at? %>
      <div class="published paper-link"><%= verbose_date(paper.published_at) %> | <%= paper.author %>
        <span class="paper-summary" data-toggle="popover" data-placement="left" title="Preview" data-content="<%= strip_tags(paper.summary) %>">| Preview</span>
      </div>
      <% else %>
      <p class="published">No Date |<span class="paper-summary" data-toggle="popover" data-placement="left" title="Preview" data-content="<%= strip_tags(paper.summary) %>">| Preview</span>
</p>
      <% end %>
        <br>
    <% end %>
    <button type="button", id="show-more-paper">Show More</button>
  </div>
</div>

<%= render 'shared/footer' %>
