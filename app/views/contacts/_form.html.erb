<div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <%= image_tag "nikcochran.png", class: "profile-image" %>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      </div>
      <div class="modal-body">
          <h2>Say Hello</h2>
          		<%= form_for @contact do |f| %>
          				<%= f.label :name, class: 'contact_name' %><br>
          				<%= f.text_field :name, required: true, class: "form-control" %>

          				<br>
          			<div class="form-group">
          				<%= f.label :email %><br>
          				<%= f.email_field :email, required: true, class: "form-control" %>
          			</div>

          				<br>
          			<div class="form-group">
          				<%= f.label :message %><br>
          				<%= f.text_area :message, as: :text, class: "form-control" %>
          			</div>

          				<div class="hidden">
          					<%= f.label :nickname %><br>
          					<%= f.text_field :nickname, hint: 'leave this field blank' %>
          				</div>

          		  		<div class="form-group">
          		  			<%= button_tag 'Send Message', class: "button", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Sending email..."} %>
          		  		</div>
          		 <% end %>
      </div>
      <div class="modal-footer">
        <button class="button button-2" data-dismiss="modal" aria-hidden="true">Cancel</button>
      </div>
    </div>
  </div>
</div>
